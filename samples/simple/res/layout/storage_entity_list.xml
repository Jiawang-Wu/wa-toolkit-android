<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/storage_entity_list"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	
	<include android:id="@+id/header" layout="@layout/navigation_header"/>
	
    <TextView
        android:id="@+id/storage_has_no_records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
	
    <ProgressBar
        android:id="@+id/storage_entity_list_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_height="64dp"
        android:layout_width="64dp"
		android:layout_marginTop="170dp"
	    android:gravity="center_vertical|center_horizontal"    	
		android:layout_gravity="center_vertical|center_horizontal|center"
		android:visibility="gone" />
	
    	<ExpandableListView 
	    android:id="@+id/entity_list_expandable_list_view" 
	    android:layout_height="wrap_content" 
	    android:layout_width="fill_parent" />    
</LinearLayout>
