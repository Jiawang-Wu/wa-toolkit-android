<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/waz_service_login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<include android:id="@+id/header" layout="@layout/navigation_header"/>
    
    <ProgressBar
        android:id="@+id/waz_service_login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_height="64dp"
        android:layout_width="64dp"
		android:layout_marginTop="170dp"
	    android:gravity="center_vertical|center_horizontal"    	
		android:layout_gravity="center_vertical|center_horizontal|center"
		android:visibility="gone" />

    <TextView
        android:id="@+id/waz_services_base_url_label"
        android:text="@string/waz_services_base_url_label_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium" android:visibility="gone"/>
        
	<EditText
	    android:id="@+id/waz_services_base_url_value"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:inputType="text"
	    android:text="@string/cloud_ready_simple_proxy_service" android:visibility="gone">
  
	</EditText>      
        
    <TextView
        android:id="@+id/username_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="@string/username_label_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	<EditText  
	    android:id="@+id/username_value"  
	    android:layout_height="wrap_content"
	    android:inputType="text"  
	    android:layout_width="fill_parent">  
	</EditText>      
            
    <TextView
        android:id="@+id/password_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="left"
        android:text="@string/password_label_text"
        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	<EditText  
	    android:id="@+id/password_value"  
	    android:layout_height="wrap_content"
	    android:layout_width="fill_parent"
        android:inputType="textPassword">  
	</EditText>      
        
	<Button 
	    android:id="@+id/login_button"
	    android:text="@string/login_button_text"
	    android:layout_height="35dp"
	    android:layout_width="150dp"
		android:gravity="center_vertical|center_horizontal"
		android:background="@drawable/gradient"
    	android:layout_gravity="center_vertical|center_horizontal|center"/>

</LinearLayout>